<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>
    <form class="default-form" method="post" enctype="multipart/form-data">
        <legend>Sube tu imagen que se mostrará junta tu nombre y biografía</legend>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
        </div>
        <% if (usuario.imagen) { %>
            <div class="campo">
                <label>Imagen Actual</label>
                <img src="/uploads/perfiles/<%= usuario.imagen %>" alt="" width="400">
            </div>
        <% } else { %>
            <p>No hay imagen actual</p>
        <% } %>

        <div class="campo enviar">
            <input type="submit" value="Subir Imagen" class="btn btn-rosa">
        </div>
    </form>
</main>