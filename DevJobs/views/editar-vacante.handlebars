<main class="contenedor">
    <form method="POST" action="/vacantes/editar/{{vacante.url}}" class="default-form">
        <h3>Información General</h3>
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" required value="{{vacante.titulo}}">
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa Contrata" required value="{{vacante.empresa}}">
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: México o Remoto" required value="{{vacante.ubicacion}}">
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej: 500 USD" required value="{{vacante.salario}}">
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato" id="">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <input type="hidden" id="x" name="descripcion" value="{{vacante.descripcion}}">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>